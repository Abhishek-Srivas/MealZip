<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/cart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="users.com.collegescout_user.NavFragments.OrdersFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="My cart"
                android:textSize="22sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/gilroy_medium"
            android:text="Shop name"
            android:textColor="#000"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_shopname"
            android:layout_marginTop="5dp"
            android:background="#fff">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_img1"
                android:layout_width="88dp"
                android:layout_height="90dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/card_img1"
                android:fontFamily="@font/gilroy_medium"
                android:text="Food name"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodname"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/card_img1"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/foodname"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/star"
                android:fontFamily="@font/gilroy_medium"
                android:text="4.0"
                android:textColor="#A0A7AF" />

            <ImageView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rating"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/card_img1"
                android:src="@drawable/ic_veg" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rating"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/type"
                android:fontFamily="@font/gilroy_medium"
                android:text="Category"
                android:textColor="#A0A7AF" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_category"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/card_img1"
                android:fontFamily="@font/gilroy_medium"
                android:text="100"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/textprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textSize="16sp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/gilroy_medium"
                    />
                <TextView
                    android:id="@+id/tvprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹100"
                    android:textSize="16sp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:layout_marginTop="4dp"
                    android:textColor="#000"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_minus" />

                <TextView
                    android:id="@+id/tv_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:paddingHorizontal="5dp"
                    android:text="1" />

                <ImageView
                    android:id="@+id/iv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plus" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/orderdetails"
            app:layout_constraintTop_toBottomOf="@id/rl"
            android:layout_width="match_parent"
            android:layout_marginTop="48dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/etbg"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bill Details"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="#000"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total items"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/tvqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total bill"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/tv_totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹100"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>

       <LinearLayout
           android:id="@+id/orderbar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:layout_constraintBottom_toBottomOf="parent"
           android:orientation="horizontal"
           android:layout_marginBottom="56dp">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="1"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:paddingHorizontal="16dp"
               android:paddingVertical="5dp"
               android:background="#fff">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Price"
                   android:textColor="#000"
                   android:textSize="16sp"
                   android:layout_marginRight="16dp"
                   android:fontFamily="@font/gilroy_medium"
                   />
               <TextView
                   android:id="@+id/tv_totalprice1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="â‚¹100"
                   android:textSize="16sp"
                   android:layout_marginRight="16dp"
                   android:fontFamily="@font/gilroy_bold"
                   android:layout_marginTop="4dp"
                   android:textColor="#000"
                   />
           </LinearLayout>
           <TextView
               android:id="@+id/tv_order"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="ORDER AND PAY"
               android:fontFamily="@font/gilroy_bold"
               android:gravity="center"
               android:textColor="#fff"
               android:layout_weight="0.8"
               android:background="#4CAF50"
               android:textSize="17sp"
               />
       </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
