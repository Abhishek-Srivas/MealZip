<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_img"
                android:layout_width="78dp"
                android:layout_height="78dp"
                app:cardCornerRadius="4dp"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/foodimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_food" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="title"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/card_img"
                android:fontFamily="@font/gilroy_bold"
                android:textColor="#000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foodname"
                android:layout_gravity="start"
                android:text="Size"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/card_img"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/itemsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Half plate"
                android:fontFamily="@font/gilroy_medium"
                android:layout_below="@+id/foodname"
                android:layout_marginLeft="15dp"
                android:textColor="#4F4CAF"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/tv_size"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/card_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:fontFamily="@font/gilroy_medium"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_below="@id/tv_size"
                android:layout_toRightOf="@id/card_img"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:id="@+id/itemprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:fontFamily="@font/gilroy_medium"
                android:layout_below="@+id/tv_size"
                android:layout_marginLeft="15dp"
                android:textColor="#AF4C4C"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/card_price"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:id="@+id/pendingbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_pending"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
